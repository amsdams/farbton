{
  "name": "farbton",
  "version": "1.0.0",
  "description": "Philips Hue Magic",
  "main": "./build/main.js",
  "bin": {
    "farbton": "./build/main.js"
  },
  "scripts": {
    "start": "npm run lint && npm run compile && node build/main.js",
    "lint": "npx tslint -p tsconfig.json",
    "compile": "tsc -p .",
    "test": "jest --no-cache",
    "coverage": "jest --no-cache --coverage && cat ./coverage/lcov.info | npx coveralls",
    "cov": "jest --coverage --coverageReporters=text-lcov| coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/amsdams/farbton"
  },
  "author": "Alexander Thiemann",
  "license": "MIT",
  "dependencies": {
    "@types/jest": "21.1.2",
    "@types/node": "^6.0.49",
    "huejay": "^1.5.0",
    "influx": "^5.0.7",
    "moment": "^2.18.1",
    "tslint-sonarts": "^1.7.0"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.35",
    "coveralls": "3.0.0",
    "jest": "^21.2.1",
    "tslint": "5.7.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "2.4.2"
  },
  "jest": {
    "verbose": true
  }
}
